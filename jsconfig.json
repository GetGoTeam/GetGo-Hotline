{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "~src/*": ["./src/*"],
      "~assets/*": ["./src/assets/*"],
      "~components/*": ["./src/components/*"],
      "~utils/*": ["./src/utils/*"],
      "~pages": ["./src/pages"],
      "~routes": ["./src/routes"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
